<h1>Localizaciones</h1>
<a href="/localizaciones/nuevo" class="btn btn-success mb-2">Nuevo</a>
<table class="table">
  <thead><tr><th>ID</th><th>Nombre</th><th>Acciones</th></tr></thead>
  <tbody>
    <% localizaciones.forEach(l => { %>
      <tr>
        <td><%= l.id %></td>
        <td><%= l.nombre %></td>
        <td>
          <a href="/localizaciones/<%= l.id %>/editar" class="btn btn-sm btn-warning"><i class='bx bx-edit'></i></a>
          <a href="/localizaciones/<%= l.id %>/eliminar" class="btn btn-sm btn-danger" onclick="return confirm('Â¿Eliminar?')"><i class='bx bx-trash'></i></a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
