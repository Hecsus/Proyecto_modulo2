<h1><%= proveedor ? 'Editar' : 'Nuevo' %> proveedor</h1>
<form action="<%= proveedor ? '/proveedores/' + proveedor.id + '/editar' : '/proveedores/nuevo' %>" method="POST" class="col-md-4">
  <div class="mb-3">
    <label class="form-label">Nombre</label>
    <input type="text" name="nombre" class="form-control" value="<%= proveedor ? proveedor.nombre : '' %>">
  </div>
  <% if (errors.length) { %>
    <div class="alert alert-danger"><ul class="mb-0"><% errors.forEach(e => { %><li><%= e.msg %></li><% }) %></ul></div>
  <% } %>
  <button class="btn btn-primary">Guardar</button>
</form>
