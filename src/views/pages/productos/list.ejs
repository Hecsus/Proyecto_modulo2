<h1>Productos</h1>
<a href="/productos/nuevo" class="btn btn-success mb-2">Nuevo</a>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Precio</th>
      <th>Stock</th>
      <th>Localización</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% productos.forEach(p => { %>
      <tr class="<%= p.stock < p.stock_minimo ? 'table-warning' : '' %>">
        <td><%= p.id %></td>
        <td><%= p.nombre %></td>
        <td><%= p.precio %></td>
        <td><%= p.stock %> / <%= p.stock_minimo %></td>
        <td><%= p.localizacion %></td>
        <td>
          <a href="/productos/<%= p.id %>" class="btn btn-sm btn-primary"><i class='bx bx-show'></i></a>
          <a href="/productos/<%= p.id %>/editar" class="btn btn-sm btn-warning"><i class='bx bx-edit'></i></a>
          <a href="/productos/<%= p.id %>/eliminar" class="btn btn-sm btn-danger" onclick="return confirm('¿Eliminar?')"><i class='bx bx-trash'></i></a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
<nav>
  <ul class="pagination">
    <% for(let i=1;i<=totalPages;i++){ %>
      <li class="page-item <%= i===page ? 'active' : '' %>"><a class="page-link" href="?page=<%= i %>"><%= i %></a></li>
    <% } %>
  </ul>
</nav>
<% if (bajoStock) { %><p class="text-danger">Listado de productos con stock por debajo del mínimo.</p><% } %>
