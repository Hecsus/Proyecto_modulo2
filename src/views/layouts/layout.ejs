<!--
  Layout base para todas las vistas.
  Propósito: estructura HTML común, carga de estilos y scripts globales.
  Entradas: `title`, `flash`, `viewClass`, cuerpo de cada vista.
  Salidas: HTML completo con mensajes flash y script principal.
-->
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title ? title + ' — ' : '' %>Inventario</title>
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
      <%- include('../partials/head') %>
      <link rel="stylesheet" href="/css/styles.css">
  </head>
  <body>
    <%- include('../partials/header') %>
    <main class="container mt-4 <%= (typeof viewClass !== 'undefined' && viewClass) ? viewClass : '' %>">
      <%- body %>
    </main>
    <%- include('../partials/footer') %>
    <% if (flash) { %>
      <script>
        Swal.fire({
          icon: '<%= flash.type === "success" ? "success" : "error" %>',
          title: '<%= flash.message %>',
          timer: 2000,
          showConfirmButton: false
        });
      </script>
    <% } %>
    <script src="/resources/js/main.js"></script>
  </body>
</html>
